<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nottification_settings">


    <ImageView
        android:id="@+id/topPlague"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/top_plague" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="Notifications"
        android:textSize="32sp"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="9dp"
        android:textColor="@color/dark_pink"
        app:layout_constraintBottom_toBottomOf="@+id/topPlague"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/seperatenot_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Information above didnâ€™t help?"
        android:textColor="@color/dark_pink"
        android:textSize="17.5sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/allnotificationslayout" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seperatenot_set">

        <LinearLayout
            android:id="@+id/question_set"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/round_top_light">

            <TextView
                android:id="@+id/question1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="14dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_medium"
                android:text="Event reminders"
                android:textColor="@color/dark_pink"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/question_set2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@color/light_pink">

            <TextView
                android:id="@+id/question2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_medium"
                android:text="Contact events"
                android:textColor="@color/dark_pink"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/question_set3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@color/light_pink">

            <TextView
                android:id="@+id/question3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_medium"
                android:text="Special offers"
                android:textColor="@color/dark_pink"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/question_set4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@color/light_pink">

            <TextView
                android:id="@+id/question4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_medium"
                android:text="Preparations progress"
                android:textColor="@color/dark_pink"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/question_set5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@color/light_pink">

            <TextView
                android:id="@+id/question5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_medium"
                android:text="Delivery notifications"
                android:textColor="@color/dark_pink"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/question_set6"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/round_bottom_light">

            <TextView
                android:id="@+id/question6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_medium"
                android:text="Payment confirmations"
                android:textColor="@color/dark_pink"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/allnotificationslayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topPlague">

        <LinearLayout
            android:id="@+id/allnotificationsset"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/round_light">

            <TextView
                android:id="@+id/allnotifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_medium"
                android:text="All notifications"
                android:textColor="@color/dark_pink"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>