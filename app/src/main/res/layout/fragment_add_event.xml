<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddEventFragment">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="120.5dp"
        android:background="@drawable/top_plague"
        android:gravity="bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/editingEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginBottom="9dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Editing event"
            android:textColor="@color/dark_pink"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/MyAccount"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>

    <TextView
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:text="Name:"
        android:layout_marginStart="26dp"
        android:layout_marginTop="26dp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/dark_pink"
        android:textSize="17.5sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

    <EditText
        android:id="@+id/name_field"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/light_button"
        android:inputType="textEmailAddress"
        android:layout_marginStart="25.5dp"
        android:layout_marginEnd="25.5dp"
        android:textColor="@color/dark_pink"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/nameText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:text="Date:"
        android:layout_marginStart="26dp"
        android:layout_marginTop="13.5dp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/dark_pink"
        android:textSize="17.5sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_field" />

    <EditText
        android:id="@+id/date_field"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/light_button"
        android:inputType="textEmailAddress"
        android:layout_marginStart="25.5dp"
        android:layout_marginEnd="25.5dp"
        android:textColor="@color/dark_pink"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/dateText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/recText"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:text="Recurrence:"
        android:layout_marginStart="26dp"
        android:layout_marginTop="13.5dp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/dark_pink"
        android:textSize="17.5sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_field" />

    <EditText
        android:id="@+id/rec_field"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/light_button"
        android:inputType="textEmailAddress"
        android:layout_marginStart="25.5dp"
        android:layout_marginEnd="25.5dp"
        android:textColor="@color/dark_pink"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/recText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/benText"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="13.5dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Beneficiary:"
        android:textColor="@color/dark_pink"
        android:textSize="17.5sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rec_field" />

    <EditText
        android:id="@+id/ben_field"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/light_button"
        android:inputType="textEmailAddress"
        android:layout_marginStart="25.5dp"
        android:layout_marginEnd="25.5dp"
        android:textColor="@color/dark_pink"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/benText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/giftText"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="13.5dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Gift:"
        android:textColor="@color/dark_pink"
        android:textSize="17.5sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ben_field" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:background="@drawable/round_light"
        android:layout_marginStart="25.5dp"
        android:layout_marginEnd="25.5dp"
        android:layout_marginTop="12.25dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/giftText">


        <TextView
            android:id="@+id/addGiftText"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Add a gift"
            android:fontFamily="@font/poppins_bold"
            android:textSize="20sp"
            android:textColor="@color/dark_pink"/>

        <TextView
            android:id="@+id/addDiscription"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:text="Pick the perfect bouquet to brighten their day!"
            android:fontFamily="@font/poppins"
            android:textSize="10sp"
            android:textColor="@color/dark_pink"
            android:layout_marginTop="-4dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/saveBttn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:background="@drawable/round_dark"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="94dp"
        android:textAllCaps="false"
        android:textSize="17.5sp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>