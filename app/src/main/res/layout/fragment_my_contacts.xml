<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyContactsFragment">

    <ImageView
        android:id="@+id/myContacts"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/top_plague" />

    <TextView
        android:id="@+id/myContactsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="My contacts"
        android:textSize="32sp"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="9dp"
        android:textColor="@color/dark_pink"
        app:layout_constraintBottom_toBottomOf="@+id/myContacts"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="24.5dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myContacts">

        <LinearLayout
            android:id="@+id/contact1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/round_top_light">

            <TextView
                android:id="@+id/contact_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="17dp"
                android:layout_marginTop="14dp"
                android:text="Ava Wilson"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/dark_pink"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contact2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@color/light_pink">

            <TextView
                android:id="@+id/contact_name_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="17dp"
                android:layout_marginTop="10dp"
                android:text="Daneil Anderson"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/dark_pink"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contact3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@color/light_pink">

            <TextView
                android:id="@+id/notif_set_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="17dp"
                android:layout_marginTop="10dp"
                android:text="Henry White"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/dark_pink"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contact4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@color/light_pink">

            <TextView
                android:id="@+id/contact_name_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="17dp"
                android:layout_marginTop="10dp"
                android:text="Jane"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/dark_pink"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contact5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@color/light_pink">


            <TextView
                android:id="@+id/contact_name_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="17dp"
                android:layout_marginTop="10dp"
                android:text="Mom"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/dark_pink"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contact6"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/round_bottom_light">

            <TextView
                android:id="@+id/contact_name_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="17dp"
                android:layout_marginTop="10dp"
                android:text="Sophia Taylor"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/dark_pink"
                android:textSize="20dp"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/addNewBttn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add new"
        android:background="@drawable/round_dark"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="94dp"
        android:textAllCaps="false"
        android:textSize="17.5sp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>