<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventScreenFragment">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="120.5dp"
        android:background="@drawable/top_plague"
        android:gravity="bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/eventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginBottom="9dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Girlfriend's Birthday"
            android:textColor="@color/dark_pink"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/MyAccount"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>

    <TextView
        android:id="@+id/dateLabel"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:text="Date:"
        android:layout_marginStart="26dp"
        android:layout_marginTop="26dp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/dark_pink"
        android:textSize="17.5sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

    <ImageView
        android:id="@+id/date_field"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/light_button"
        android:layout_marginStart="25.5dp"
        android:layout_marginEnd="25.5dp"
        app:layout_constraintTop_toBottomOf="@+id/dateLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="22.5dp"
        android:text="20-12-2024"
        android:layout_marginStart="16dp"
        android:textColor="@color/dark_pink"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/date_field"
        app:layout_constraintStart_toStartOf="@+id/date_field"
        app:layout_constraintTop_toTopOf="@+id/date_field" />

    <TextView
        android:id="@+id/recLabel"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:text="Recurrence:"
        android:layout_marginStart="26dp"
        android:layout_marginTop="13.5dp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/dark_pink"
        android:textSize="17.5sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_field" />

    <ImageView
        android:id="@+id/rec_field"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/light_button"
        android:layout_marginStart="25.5dp"
        android:layout_marginEnd="25.5dp"
        app:layout_constraintTop_toBottomOf="@+id/recLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/recText"
        android:layout_width="wrap_content"
        android:layout_height="22.5dp"
        android:text="once a year"
        android:layout_marginStart="16dp"
        android:textColor="@color/dark_pink"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/rec_field"
        app:layout_constraintStart_toStartOf="@+id/rec_field"
        app:layout_constraintTop_toTopOf="@+id/rec_field" />

    <TextView
        android:id="@+id/benLabel"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="13.5dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Beneficiary:"
        android:textColor="@color/dark_pink"
        android:textSize="17.5sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rec_field" />

    <ImageView
        android:id="@+id/ben_field"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/light_button"
        android:layout_marginStart="25.5dp"
        android:layout_marginEnd="25.5dp"
        app:layout_constraintTop_toBottomOf="@+id/benLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/benText"
        android:layout_width="wrap_content"
        android:layout_height="22.5dp"
        android:text="Jane"
        android:layout_marginStart="16dp"
        android:textColor="@color/dark_pink"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/ben_field"
        app:layout_constraintStart_toStartOf="@+id/ben_field"
        app:layout_constraintTop_toTopOf="@+id/ben_field" />

    <TextView
        android:id="@+id/giftLabel"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="13.5dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Gift:"
        android:textColor="@color/dark_pink"
        android:textSize="17.5sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ben_field" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:background="@drawable/round_light"
        android:layout_marginStart="25.5dp"
        android:layout_marginEnd="25.5dp"
        android:layout_marginTop="12.25dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/giftLabel">


        <ImageView
            android:id="@+id/giftImage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:src="@drawable/bouqet_image" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="3"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/giftName"
                android:layout_width="match_parent"
                android:layout_height="22.5dp"
                android:text="Blush Harmony"
                android:fontFamily="@font/poppins_bold"
                android:textSize="15dp"
                android:textColor="@color/dark_pink"/>

            <TextView
                android:id="@+id/giftPrice"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:text="100zÅ‚"
                android:textSize="10dp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/dark_pink"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/infoDots"
            android:layout_width="5dp"
            android:layout_height="17.25dp"
            android:layout_weight="1"
            android:src="@drawable/info_dots" />

    </LinearLayout>

    <Button
        android:id="@+id/editEventBttn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit event"
        android:background="@drawable/round_dark"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="94dp"
        android:textAllCaps="false"
        android:textSize="17.5sp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/deleteBttn"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:text="Delete event"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="17.5sp"
        android:textColor="@color/dark_pink"
        app:layout_constraintBottom_toTopOf="@+id/editEventBttn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>