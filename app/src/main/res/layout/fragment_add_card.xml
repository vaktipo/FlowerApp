<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCardFragment">

    <LinearLayout
        android:id="@+id/topPlague"
        android:layout_width="match_parent"
        android:layout_height="120.5dp"
        android:background="@drawable/top_plague"
        android:gravity="bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/newContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginBottom="9dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Add a card"
            android:textColor="@color/dark_pink"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/MyAccount"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="187.5dp"
        android:layout_marginStart="12.5dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="12.5dp"
        android:background="@drawable/round_pink"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topPlague">


        <TextView
            android:id="@+id/cardName"
            android:layout_width="wrap_content"
            android:layout_height="37.5dp"
            android:fontFamily="@font/poppins_bold"
            android:text="My card"
            android:textColor="@color/dark_pink"
            android:textSize="25dp"
            android:layout_marginStart="23dp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:text="Enter card number:"
            android:layout_marginTop="10dp"
            android:layout_marginStart="23dp"
            android:textSize="12.5sp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/dark_pink"/>

        <EditText
            android:id="@+id/cardNumber"
            android:layout_width="match_parent"
            android:layout_height="32.5dp"
            android:ems="16"
            android:inputType="number"
            android:layout_marginStart="11dp"
            android:layout_marginEnd="11dp"
            android:background="@drawable/round_light"
            android:hint="---- ---- ---- ----"
            android:textSize="25sp"
            android:fontFamily="@font/kredit"
            android:gravity="center"
            android:letterSpacing="0.11"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Date:"
                android:textColor="@color/dark_pink"
                android:textSize="12.5sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_medium"
                android:text="CVV:"
                android:textColor="@color/dark_pink"
                android:textSize="12.5sp"
                android:layout_marginStart="50dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/cardDate"
                android:layout_width="75dp"
                android:layout_height="32.5dp"
                android:inputType="date"
                android:background="@drawable/round_light"
                android:hint="--/--"
                android:textSize="16sp"
                android:fontFamily="@font/kredit"
                android:gravity="center"
                android:letterSpacing="0.13"/>

            <EditText
                android:id="@+id/cardCVV"
                android:layout_width="45dp"
                android:layout_height="32.5dp"
                android:inputType="number"
                android:background="@drawable/round_light"
                android:hint="---"
                android:ems="3"
                android:textSize="16sp"
                android:fontFamily="@font/kredit"
                android:gravity="center"
                android:letterSpacing="0.13"
                android:layout_marginStart="11.5dp"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Important Information!"
        android:layout_marginStart="26dp"
        android:layout_marginTop="23dp"
        android:textColor="@color/dark_pink"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="17.5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/to_verify_your_card"
        android:layout_marginStart="12.5dp"
        android:layout_marginEnd="12.5dp"
        android:textSize="12.5sp"
        android:textColor="@color/dark_pink"
        android:fontFamily="@font/poppins_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />


</androidx.constraintlayout.widget.ConstraintLayout>