<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:background="@drawable/round_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.applandeo.materialcalendarview.CalendarView
            android:id="@+id/calendar"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="22.5dp"
        android:color="@color/dark_pink"
        android:fontFamily="@font/poppins_light"
        android:gravity="center"
        android:text="20.12.2024"
        android:textSize="15dp"
        android:layout_marginTop="18.75dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="77.5dp"
        android:orientation="vertical"
        android:background="@drawable/round_light"
        android:layout_marginStart="12.5dp"
        android:layout_marginEnd="12.5dp"
        android:layout_marginTop="7.5dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date">


        <TextView
            android:id="@+id/eventName"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Girlfriend's Birthday"
            android:fontFamily="@font/poppins_bold"
            android:textSize="20sp"
            android:textColor="@color/dark_pink"/>

        <TextView
            android:id="@+id/eventDedication"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:text="Present for: Jane"
            android:textSize="10dp"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/dark_pink"/>
    </LinearLayout>

    <Button
        android:id="@+id/addNewBttn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add new"
        android:background="@drawable/round_dark"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="94dp"
        android:textAllCaps="false"
        android:textSize="17.5sp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>