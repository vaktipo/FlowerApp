<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Button Background Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/mint" />
            <corners android:radius="190dp" />
        </shape>
    </item>

    <!-- Left Inner Shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="180"
                android:centerColor="#00FFFFFF"
                android:centerX="0.98"
                android:endColor="#50000000"
                android:startColor="#00FFFFFF" />
            <corners android:radius="190dp" />
        </shape>
    </item>

    <!-- Right Inner Shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:centerColor="#00FFFFFF"
                android:centerX="0.02"
                android:endColor="#50000000"
                android:startColor="#00FFFFFF" />
            <corners android:radius="190dp" />
        </shape>
    </item>

    <!-- Top Inner Shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:centerColor="#00FFFFFF"
                android:centerY="0.1"
                android:endColor="#00FFFFFF"
                android:startColor="#50000000"/>
            <corners android:radius="190dp" />
        </shape>
    </item>

    <!-- Bottom Inner Shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:centerColor="#00FFFFFF"
                android:centerY="0.1"
                android:endColor="#00FFFFFF"
                android:startColor="#50000000"
            />
            <corners android:radius="190dp" />
        </shape>
    </item>

</layer-list>
